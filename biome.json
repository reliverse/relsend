{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.turbo",
      "!**/.vercel",
      "!**/dist-*",
      "!**/dist",
      "!**/node_modules",
      "!**/styles/dist"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "useAwait": "off",
        "noExplicitAny": "off",
        "noConsole": "off"
      },
      "style": {
        "useCollapsedIf": "off",
        "useTemplate": "off",
        "noUselessElse": "off",
        "useBlockStatements": "off",
        "useNodejsImportProtocol": "off",
        "useReadonlyClassProperties": "off",
        "noParameterAssign": "off",
        "noNestedTernary": "off",
        "noMagicNumbers": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noUnusedImports": "off",
        "noEmptyPattern": "off"
      },
      "performance": {
        "useTopLevelRegex": "off",
        "noNamespaceImport": "off",
        "noBarrelFile": "off"
      },
      "nursery": {
        "useSortedClasses": "off",
        "noShadow": "off",
        "noUnnecessaryConditions": "off"
      }
    }
  },
  "javascript": {
    "globals": ["Bun", "Liveblocks"],
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
