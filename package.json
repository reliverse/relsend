    "@reliverse/relico": "^1.4.0",
    "@tailwindcss/cli": "^4.1.14",
    "cli-cursor": "^5.0.0",
    "cli-spinners": "^3.3.0",
    "is-interactive": "^2.0.0",
    "is-unicode-supported": "^2.1.0",
    "nodemailer": "^7.0.9",
    "p-map": "^7.0.3",
    "pretty-bytes": "^7.1.0",
    "pretty-ms": "^9.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-email": "^4.3.0",
    "resend": "^6.1.2",
