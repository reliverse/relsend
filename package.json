{
  "name": "@reliverse/relsend",
  "version": "1.1.4",
  "type": "module",
  "module": "src/mod.ts",
  "bin": {
    "relsend": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/mod.d.ts",
      "default": "./dist/mod.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@react-email/components": "^0.5.7",
    "@react-email/preview-server": "^4.3.2",
    "@react-email/tailwind": "^1.2.2",
    "@reliverse/ohmymsg": "^1.0.3",
    "@reliverse/relico": "^1.4.2",
    "@tailwindcss/cli": "^4.1.16",
    "cli-cursor": "^5.0.0",
    "cli-spinners": "^3.3.0",
    "is-interactive": "^2.0.0",
    "is-unicode-supported": "^2.1.0",
    "nodemailer": "^7.0.10",
    "p-map": "^7.0.3",
    "pretty-bytes": "^7.1.0",
    "pretty-ms": "^9.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-email": "^4.3.2",
    "resend": "^6.4.0",
    "stdin-discarder": "^0.2.2",
    "string-width": "^8.1.0",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@reliverse/dler": "^2.0.27",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript": "^5.9.3",
    "ultracite": "^6.1.0"
  },
  "scripts": {
    "emails:send": "bun relsend send --template newsletter",
    "pub": "bun dler build && bun dler publish",
    "relsend": "bun src/cli.ts",
    "latest": "bun dler update && bun install && bun check",
    "preview": "email dev --dir emails/components",
    "check": "bun dler tsc && biome check --write --unsafe",
    "build:css": "npx @tailwindcss/cli -i ./styles/globals.css -o ./styles/dist/output.css",
    "build:css:watch": "npx @tailwindcss/cli -i ./styles/globals.css -o ./styles/dist/output.css --watch"
  }
}
